LANGUAGE LANG_CZECH, SUBLANG_DEFAULT

IDC_MAGNIFIER MENU
BEGIN
    POPUP "&Soubor"
    BEGIN
        MENUITEM "&Ukončit", IDM_EXIT
        MENUITEM "&Možnosti", IDM_OPTIONS
        MENUITEM SEPARATOR
        MENUITEM "&O programu", IDM_ABOUT
    END
END

IDC_MAGNIFIER ACCELERATORS
BEGIN
    "?", IDM_ABOUT, ASCII, ALT
    "/", IDM_ABOUT, ASCII, ALT
END

